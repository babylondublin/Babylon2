extends ../../../layouts/default

include ../../../mixins/post

block intro
	.page-intro: .container
		h1.page-title=data.tag ? data.tag.name : 'News'
		p.lead Some text
			br
			hr
			if user
				a(href='/me/create/post') create post
			if !user
				a(href='/join') Register to create posts
			hr
block content
	.page-content: .container.blog
		.row
			div(class= data.tags.length || !data.posts.length ? 'col-md-10' : 'col-md-10 col-md-offset-1')
				if filters.tag && !data.tag
					h3 Invalid tag.
				else
					if data.posts.length
						.post-cards.row(itemscope)
							each post in data.posts
								+post(post)
					else
						if data.tag
							h3.text-muted No posts in the tag #{data.tag.name}.
						else
							h3.text-muted There are no posts yet.
			
			if data.tags.length
				.col-md-2
					if data.tags.length
						h5.text-muted Filter by tag
						ul.list-unstyled.tags-list
							li: a(href='/news', class=!data.tags ? 'active' : false) All
							each tag in data.tags
								li: a(href='/news/' + tag.key, class=data.tag && data.tag.id == tag.id ? 'active' : false).list-group-item= tag.name
