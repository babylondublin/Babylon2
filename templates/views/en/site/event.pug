extends ../../../layouts/default

block content
	.container-sm
		a(href='/events').text-muted &larr; Back to Events
		article.full-post
			if !event
				h2 Invalid Event.
			else
				header
					h1.blog-article__title= event.title
					
					//- sharing buttons
					.share-buttons
						span.share-button
							.fb-like(data-href="https://www.sydjs.com/blog/post/" + event.slug, data-colorscheme="light", data-layout="button_count", data-action="like", data-show-faces="false", data-send="false")
						span.share-button
							a(href="https://twitter.com/share", data-via="Babylon", data-hashtags="babylon", data-count="button", data-dnt="true").twitter-share-button Tweet
						span.share-button
							.g-plusone(data-size="medium")
				if event.image.exists
					.article-image.mv-3: img(src=event._.image.fit(720,420)).img-responsive.img-thumbnail
				!= event.content.full


block js
	script(src='/js/common/share.js')
	script(src="https://apis.google.com/js/plusone.js")
